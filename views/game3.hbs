	$scope.thirdDone = false;
  	$scope.fourDone = false;
  	$scope.fiveDone = false;
  	$scope.sixDone = false;


  	var firstSeconds = setInterval(firstButtonShowFunction, 3000);
  	var secondSeconds = setInterval(secondButtonFunction, 6000);
