 <script>
angular.module('myApp', [])
  .controller('myCtrl', ['$scope', '$http', function($scope, $http) {

  	$scope.Color1 = true;
	$scope.Color2 = false;
	$scope.Color3 = false;
	$scope.Color4 = false;
	$scope.Color5 = false;
	$scope.Color5 = false;
	$scope.incorrect = 0;
	$scope.correct = 0;

